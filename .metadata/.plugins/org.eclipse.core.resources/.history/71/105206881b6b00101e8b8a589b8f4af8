package com.wi;



class Heart {
	
	void pump() {                                        
		System.out.println("Heart is pumping blood...");
	
	}
}

class Human {
	 private Heart heart;
	
	                                                               //Constructor - Composition: Heart is created inside Human
	 public Human() {
	     heart = new Heart(); 
      }
	
     void live() {
     heart.pump(); 
	     System.out.println("Human is alive!");
	 }
	}
	



public class Comp {

	public static void main(String[] args) {
		Human human = new Human();  
	     human.live();               
	 }
	

}


